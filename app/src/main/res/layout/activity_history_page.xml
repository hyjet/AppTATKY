<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/history_refresh_layout"
    android:layout_height="match_parent"
    tools:context=".View.HistoryPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/history_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light"
            >
            <ImageView
                android:id="@+id/history_btn_back"
                android:layout_width="@dimen/ImageButtonSize3"
                android:layout_height="@dimen/ImageButtonSize3"
                android:tintMode="src_atop"
                android:tint="#FFFFFF"
                android:src="@drawable/icon_back_button"/>
            <TextView
                style="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"
                android:id="@+id/history_toolbar_tv"
                android:layout_width="match_parent"
                android:layout_marginEnd="104dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:textSize="26sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/history"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                />
        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_rview_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/history_tv_empty_message"
            style="@style/TextHeader2Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>