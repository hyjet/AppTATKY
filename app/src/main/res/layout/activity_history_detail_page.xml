<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.HistoryDetailPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/history_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        >
        <ImageView
            android:id="@+id/history_detail_btn_back"
            android:layout_width="@dimen/ImageButtonSize3"
            android:layout_height="@dimen/ImageButtonSize3"
            android:tintMode="src_atop"
            android:tint="#FFFFFF"
            android:src="@drawable/icon_back_button"/>
        <TextView
            style="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"
            android:id="@+id/history_detail_toolbar_tv"
            android:layout_width="match_parent"
            android:layout_marginEnd="104dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:textSize="26sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/history_detail"
            android:textAppearance="@android:style/TextAppearance.WindowTitle"
            />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/history_detail_tv_title"
        style="@style/TextHeader2Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        tools:text="ABCDE" />

    <TextView
        android:id="@+id/history_detail_tv_date"
        style="@style/TextBodyPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        tools:text="ABCDE" />

    <TextView
        android:id="@+id/history_detail_tv_detail"
        style="@style/TextBodyPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        tools:text="ABCDE" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/history_detail_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/history_detail_rview_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:itemCount="3"
            tools:listitem="@layout/item_histroy_detail" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/history_detail_total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_detail_tv_total"
                style="@style/TextHeader3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total" />

            <TextView
                android:id="@+id/history_detail_tv_total_price"
                style="@style/TextHeader3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="Rp. 15,000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>