<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.NewsRatingActivity">

    <FrameLayout
        android:id="@+id/news_rating_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/news_rating_imgv_image"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/sir_salon" />

        <ImageButton
            android:id="@+id/news_rating_btn_back_navigation"
            android:layout_width="@dimen/ImageButtonSize1"
            android:layout_height="@dimen/ImageButtonSize1"
            android:layout_margin="16dp"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_back_button"
            android:tint="@color/buttonSecondaryColor" />
    </FrameLayout>

    <TextView
        android:id="@+id/news_rating_tv_title"
        style="@style/TextHeader1Smaller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/news_rating_image_layout"
        tools:text="Lorem Ipsum" />

    <LinearLayout
        android:id="@+id/news_rating_rate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news_rating_tv_title">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_star" />

        <TextView
            android:id="@+id/news_rating_tv_rate"
            style="@style/TextHeader3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:textStyle="normal"
            tools:text="0.0" />



        <TextView
            android:id="@+id/news_rating_tv_date"
            style="@style/TextHeader3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:gravity="end"
            android:textStyle="normal"
            tools:text="22 Desember 2019" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/news_rating_rate_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:progressTint="#FFFF00"
        android:rating="0"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news_rating_rate_layout" />

    <Button
        android:id="@+id/news_rating_btn_rate"
        style="@style/ButtonPrimaryStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:text="@string/rate"/>
</androidx.constraintlayout.widget.ConstraintLayout>