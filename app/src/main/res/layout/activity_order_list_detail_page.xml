<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.OrderListDetailPage">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/order_detail_cimgv_driver_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oreder_detail_tv_driver_name_label"
        style="@style/TextBodyPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/driver_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_cimgv_driver_photo" />

    <TextView
        android:id="@+id/order_detail_tv_driver_name"
        style="@style/TextHeader4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@id/oreder_detail_tv_driver_name_label"
        app:layout_constraintTop_toBottomOf="@id/order_detail_cimgv_driver_photo"
        tools:text="Situmorang" />

    <TextView
        android:id="@+id/oreder_detail_tv_driver_phone_label"
        style="@style/TextBodyPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/driver_phone_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oreder_detail_tv_driver_name_label" />

    <TextView
        android:id="@+id/order_detail_tv_driver_phone"
        style="@style/TextHeader4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@id/oreder_detail_tv_driver_phone_label"
        app:layout_constraintTop_toBottomOf="@id/oreder_detail_tv_driver_name_label"
        tools:text="0812345667" />

    <TextView
        android:id="@+id/order_detail_tv_driver_not_decided_msg"
        style="@style/TextHeader4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:text="@string/not_decided_picker"
        app:layout_constraintBottom_toTopOf="@id/order_detail_rv_top_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_cimgv_driver_photo" />

    <View
        android:id="@+id/order_detail_rv_top_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_cimgv_driver_photo" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/order_detail_rview_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_detail_rv_top_border"
        tools:itemCount="3"
        tools:listitem="@layout/item_histroy_detail" />

    <View
        android:id="@+id/order_detail_rv_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_rview_order_detail" />

    <LinearLayout
        android:id="@+id/order_detail_total_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_rv_bottom_border">

        <TextView
            android:id="@+id/history_detail_tv_total"
            style="@style/TextHeader3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total" />

        <TextView
            android:id="@+id/history_detail_tv_total_price"
            style="@style/TextHeader3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            tools:text="Rp. 15,000" />
    </LinearLayout>

    <Button
        android:id="@+id/order_detail_btn_cancel_order"
        style="@style/ButtonWarnStyle"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/cancel_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>