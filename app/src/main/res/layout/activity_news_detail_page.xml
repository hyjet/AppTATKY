<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewsDetailPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/news_detail_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/news_detail_imgv_image"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@color/colorPrimaryDark" />

                <ImageButton
                    android:id="@+id/news_detail_btn_back_navigation"
                    android:layout_width="@dimen/ImageButtonSize1"
                    android:layout_height="@dimen/ImageButtonSize1"
                    android:layout_margin="16dp"
                    android:background="#00000000"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_back_button"
                    android:tint="@color/buttonSecondaryColor" />
            </FrameLayout>

            <TextView
                android:id="@+id/news_detail_tv_title"
                style="@style/TextHeader1Smaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/news_detail_image_layout"
                tools:text="Lorem Ipsum" />

            <LinearLayout
                android:id="@+id/news_detail_rate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/news_detail_tv_title">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_star" />

                <TextView
                    android:id="@+id/news_detail_tv_rate"
                    style="@style/TextHeader3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textStyle="normal"
                    tools:text="0.0" />

                <TextView
                    style="@style/TextHeader3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:text="@string/rate"
                    android:clickable="true"
                    android:textColor="@color/link"
                    android:textStyle="normal"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/news_detail_tv_date"
                    style="@style/TextHeader3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textStyle="normal"
                    tools:text="22 Desember 2019" />
            </LinearLayout>

            <TextView
                android:id="@+id/news_detail_tv_description"
                style="@style/TextBodyPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/longtext"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/news_detail_rate_layout" />

            <View
                android:id="@+id/news_detail_comment_seperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/news_detail_tv_description" />

            <TextView
                android:id="@+id/news_detail_comment_header"
                style="@style/TextHeader3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="@string/comment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/news_detail_comment_seperator" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/news_detail_rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/news_detail_comment_header" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/news_detail_edt_comment"
            style="@style/InputStyle"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:hint="@string/write_comment" />

        <ImageView
            android:id="@+id/news_detail_btn_send"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_send"
            android:visibility="visible"

            />
    </LinearLayout>

</LinearLayout>